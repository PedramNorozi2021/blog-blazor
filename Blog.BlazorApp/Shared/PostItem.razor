@using Blog.BlazorApp.ViewModels.Posts
@inject HttpClient httpClient

<div class="post-item">
    <div class="post-item-right">
        <a href="post/@Post!.Slug" >
            <img src="@string.Format($"{httpClient.BaseAddress+Post.ImageUrl}")" alt="">
        </a>
    </div>

    <div class="post-item-left">
        <div class="post-item-left-top">
            <a href="post/@Post.Slug" class="post-title-link">
                @Post.Title
            </a>
            <p class="post-body">
                @Post.Body
            </p>
        </div>
        <div class="post-item-left-bottom">
            <span class="write"><i class="bi bi-person"></i>@Post.UserName</span>
            <span class="visited-count"><i class="bi bi-eye"></i>12,793 </span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public PostViewModel? Post { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}
